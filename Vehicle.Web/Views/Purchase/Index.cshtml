@model IEnumerable<Vehicle.Core.ViewModels.PurchaseVM>

@{ ViewData["Title"] = "List Purchase"; }

<h1>List Of All Vehicle Purchase</h1>

<hr />
<p>
    <a asp-action="Create" class="btn btn-success"> <i class="fas fa-plus" aria-hidden="true"></i> Purchase Vehicle</a>
</p>

<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleMake)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BodyType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>            
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleMake)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BodyType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@item.Id">
                    <i class="fas fa-pencil-alt"></i> Edit
                </a>
                <a asp-action="Details" class="btn btn-info btn-sm" asp-route-id="@item.Id">
                    <i class="fas fa-info-circle"></i> Datails
                </a>
                <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this record?')">
                    <i class="fas fa-trash"></i> Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts{
    <script></script>
}

